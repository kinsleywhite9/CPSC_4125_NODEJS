<html>
    <head>
        <title>
            To-do
        </title>
        <link href= "/style.css" rel="stylesheet">
    </head>
    <body>
        <h1>
            My To-do List
        </h1>
        <form action="/addToDo" method="POST">
            <input type="text" name="newtodo" placeholder="add new item">

            <button type="submit">
                Add To-Do
            </button>
            <h2>
                Current Task
            </h2>
            <%  for( var i=0; i<tasks.length; i++){ %>
                <li><input type="checkbox" name="check" value="<% = tasks[i] %>" /><%= tasks[i] %></li>
            <% } %>
            
            <button formaction="/removeToDo" type="submit">
                remove
            </button>
        </form>
        <form action="" method="POST"></form>
            <h2>
                Completed Task 
            </h2>
            <%  for(var i=0; i<completed.length; i++){ %>
                <li><input type="checkbox" name="delete" value="<% = completed[i] %>" /><%= completed[i] %></li>
            <% } %>
            <button formaction="/deleteToDo" type="submit">
                remove
            </button>
            </form>
    </body>
</html>